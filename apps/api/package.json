{
  "name": "@planiversary/api",
  "version": "1.0.0",
  "description": "Express backend for Planiversary",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "generate-certs": "bash scripts/generate-ssl-certs.sh",
    "dev:https": "npm run generate-certs && ts-node-dev --respawn --transpile-only src/server.ts",
    "test:redis": "ts-node src/scripts/test-redis.ts",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:rollback": "ts-node src/scripts/rollback.ts",
    "test": "jest",
    "setup:env": "ts-node scripts/setup-env.ts",
    "setup:ssl": "ts-node scripts/generate-ssl-certs.ts",
    "create-test-user": "ts-node scripts/create-test-user.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.800.0",
    "@aws-sdk/s3-request-presigner": "^3.800.0",
    "@types/pg-promise": "^5.4.3",
    "bcrypt": "^5.1.1",
    "connect-redis": "^8.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg-promise": "^11.13.0",
    "redis": "^4.7.0",
    "zod": "^3.24.3",
    "@sendgrid/mail": "^7.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.14",
    "express-validator": "^7.2.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
